@model BTL_DoAn.Application.Catalog.Policies.PolicyViewModels

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Thông tin chính sách</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Thông tin chính sách </li>
    </ol>
    <div style="margin: 20px 0;">
        <a class="btn btn-success" asp-action="Index" asp-controller="Policy">Danh sách chính sách</a>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">

                    <dl class="row">
                        
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.PolicyName)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.PolicyName)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.PolicyDescription)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.PolicyDescription)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Discount)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Discount)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.ProductId)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.ProductId)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.StartDate)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.StartDate)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.EndDate)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.EndDate)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Voucher)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Voucher)
                        </dd>
                    </dl>

                    <div style="margin: 20px 0;">
                        <a class="btn btn-success" @Html.ActionLink("Sửa thông tin", "Edit", new { id = @Model.PolicyId })</a>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

