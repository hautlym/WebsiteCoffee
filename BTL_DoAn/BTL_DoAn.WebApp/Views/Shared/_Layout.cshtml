    <title>Trang chủ</title>
    <style>
        .header-top__menu--account {
            position: relative;
            margin: 0 10px;
            color: #000;
            width: 100px;
        }

            .header-top__menu--shop a,
            .header-top__menu--account a {
                text-decoration: none;
                color: #000;
            }

                .header-top__menu--shop a:hover,
                .header-top__menu--account a:hover {
                    color: ##00a30e;
                    cursor: pointer;
                }

            .icon_menu_header:hover
            .header-top__menu--account--list {
                display: block;
            }

            .header-top__menu--shop::after,
            .header-top__menu--account::after {
                content: "";
                width: 100%;
                height: 15px;
                left: 0;
                bottom: -9px;
                position: absolute;
            }

        .header-top__menu--account--list {
            letter-spacing: normal;
            z-index: 1;
            display: none;
            position: absolute;
            left: 0px;
            top: 25px;
            width:150px;
            list-style: none;
            padding: 0;
            margin: 0;
            line-height: 2;
            border-radius: 3px;
            font-weight: 400;
            box-shadow: 0 0 3px #757575;
            background-color: #fff;
        }

        .header-top__menu--account-item {
            padding: 5px 10px;
        }

            .header-top__menu--account-item:hover {
                color: #916841;
                cursor: pointer;
                background-color: #f7f7f7;
            }
            
                
            
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="about_website">
            <div class="main-menu">
                <div id="menu">
                    <div class="logo">
                        <a href="@Url.Action("Index","Home")">
                            <img src="~/asset/img/logo.png" alt="" />
                        </a>
                    </div>
                    <ul class="menu_header">
                        <li><a class="menu_tab_header" href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li><a class="menu_tab_header 1" href="@Url.Action("Index","Product")">Thực đơn </a></li>
                        <li><a class="menu_tab_header 2" href="#">Tin tức </a></li>
                        <li><a class="menu_tab_header 3" href="#">Giới thiệu</a></li>
                        <li><a class="menu_tab_header 3" href="@Url.Action("Contact","Home")">Liên hệ</a></li>
                    </ul>
                    <div class="icon_menu_header" style="  position: relative;">
                        <div class="user">
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="" class="account_icon" style="color: #fff;"> @User.Identity.Name</a>
                            <ul class="header-top__menu--account--list" >
                                <li class="header-top__menu--account-item">
                                    <form action="/Account/Logout" method="post">
                                        <button type="submit" value="Đăng xuất" style="background-color: transparent;border: none;">
                                            <span>ĐĂNG XUẤT</span>
                                        </button>
                                    </form>
                                </li>
                                <li class="header-top__menu--account-item"><a href="@Url.Action("Index","Cart")" style="padding: 0;color:#000;"> GIỎ HÀNG</a></li>
                                <li class="header-top__menu--account-item"><a href="@Url.Action("CheckOutDetail","Cart")" style="padding: 0;color:#000;"> ĐƠN HÀNG</a></li>
                            </ul>
                        }
                        else
                        {
                            <a href="@Url.Action("Login","Account")" class="account_icon">
                                <i class="fas fa-user-alt" style="color: #fff;"></i>
                            </a>
                            <ul class="header-top__menu--account--list">
                                <li class="header-top__menu--account-item"><a href="@Url.Action("login","account")" style="padding: 0;color:#000;">ĐĂNG NHẬP</a> </li>
                                <li class="header-top__menu--account-item"><a href="@Url.Action("register","account")" style="padding: 0;color:#000;">ĐĂNG KÝ</a></li>
                            </ul>
                        }
                    </div>
                    <div class="buy">
                        <a class="icon-buy menu_tab_header " href="@Url.Action("Index","Cart")">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <div class="mid-footer mid_footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
                        <div class="box-maps">
                            <div class="iFrameMap">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d232.82517052650962!2d105.79917392717998!3d20.984509173832194!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135acc6bdc7f95f%3A0x58ffc66343a45247!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBDw7RuZyBuZ2jhu4cgR2lhbyB0aMO0bmcgVuG6rW4gdOG6o2k!5e0!3m2!1svi!2s!4v1667891329914!5m2!1svi!2s"
                                        width="450" height="350" style="border:0;" allowfullscreen="" loading="lazy"
                                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                                <a href="/lien-he" class="google-map">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-lg-offset-1 col-md-6 col-sm-6 col-xs-12 content_infor">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                <ul class="contact">
                                    <li>
                                        <img class="img-footer" src="~/asset/img/logo.png" alt="">
                                        <p class="summary_footer">
                                            CHÚNG TÔI LÀ MUỐI CÀ PHÊ
                                        </p>
                                    </li>
                                    <li class="li_footer_h">
                                        <div class="icon_base">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </div>
                                        <span class="txt_content_child">
                                            Trụ sở chính:
                                            9 Ngõ 58 - Triều Khúc, Thanh Xuân Nam, Thanh Trì, Hà Nội, Việt Nam
                                        </span>
                                        <div>
                                            SĐT: 0987654321
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
