@model HomeViewModels
@{
    ViewData["Title"] = "Home Page";
}
@{
    string url = "https://localhost:7034/user-content/";

}
<div class="banner">
    <div class="inner">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div id="banner-carousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item" data-bs-interval="">
                                <p class="banner-sub-heading">PHONG CÁCH HỆN ĐẠI</p>
                                <hr class="dashed" />
                                <a href="#" class="btn btn-white btn-animated btn-View-about">
                                    Xem thêm
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section_about">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                <div class="module_left a-center">
                    <div class="heading">
                        <h2 class="large_title">Chúng tôi là</h2>
                        <span class="mini_title">muối</span>
                    </div>
                    <div class="day_time">
                        Thứ hai đến Thứ bảy <b>8:30am - 11:00pm</b>
                        <span class="hidden-xs">|</span>
                        Hotline:
                        <a href="tel:19006750">19006750</a>
                    </div>
                    <span>
                        Chúng tôi đi khắp thế giới để tìm kiếm cà phê tuyệt vời.
                        Trong quá trình đó, chúng tôi phát hiện ra những hạt đậu đặc
                        biệt và hiếm đến nỗi chúng tôi có thể chờ đợi để mang chúng
                        về.
                    </span>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                <div class="module_right a-center">
                    <img class="lazyload" src="./asset/img/cafehuongvi.jpg" alt="Coffee
                  House" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section_menu">
    <h2 class="section_menu-header">
        Menu hôm nay
    </h2>
    <ul class="nav nav-pills mb-3 tablist" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home"
                    type="button" role="tab" aria-controls="pills-home" aria-selected="true">
                Cà phê
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile"
                    type="button" role="tab" aria-controls="pills-profile" aria-selected="false">
               Trà Sữa
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact"
                    type="button" role="tab" aria-controls="pills-contact" aria-selected="false">
                Đồ ăn vặt
            </button>
        </li>

    </ul>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab"
             tabindex="0">
            <div class="product-list">
                @foreach(var item in Model.CoffeeProduct)
                {
                    <div class="product-item">
                    <img src="@Url.Content(@url+@item.ThumbnailImage[0].ImagePath)" class="product-Img"></img>
                    <div class="product-content">
                        <div class="product-name-price">
                            <a href="@Url.Action("Details","Product",new{id = @item.Id})" class="product-name">
                                <span style="background-color: #FFFAFA;
                      width: 100%;
                      z-index: 1;
padding-right: 5px;">@item.ProductName</span>
                            </a>
                            <div class="product-price">
                                @String.Format("{0:n0}", item.ProductPrice)đ
                            </div>
                        </div>
                        <div class="product-description">
                            @item.ProductDescription
                        </div>
                    </div>
                </div>
                }               
               
            </div>

        </div>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab"
             tabindex="0">
             <div class="product-list">
                @foreach(var item in Model.Drinkproduct)
                {
                    <div class="product-item">
                    <img src="@Url.Content(@url+@item.ThumbnailImage[0].ImagePath)" class="product-Img"></img>
                    <div class="product-content">
                        <div class="product-name-price">
                            <a href="@Url.Action("Details","Product",new{id = @item.Id})" class="product-name">
                                <span style="background-color: #FFFAFA;
                      width: 100%;
                      z-index: 1;
padding-right: 5px;">@item.ProductName</span>
                            </a>
                            <div class="product-price">
                                @String.Format("{0:n0}", @Math.Floor( @item.ProductPrice-item.ProductPrice*item.Discount/100))đ
                            </div>
                        </div>
                        <div class="product-description">
                            @item.ProductDescription
                        </div>
                    </div>
                </div>
                }               
               
            </div>
        </div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab"
             tabindex="0">
             <div class="product-list">
                @foreach(var item in Model.FastFoodProduct)
                {
                    <div class="product-item">
                    <img src="@Url.Content(@url+@item.ThumbnailImage[0].ImagePath)" class="product-Img"></img>
                    <div class="product-content">
                        <div class="product-name-price">
                            <a href="@Url.Action("Details","Product",new{id = @item.Id})" class="product-name">
                                <span style="background-color: #FFFAFA;
                      width: 100%;
                      z-index: 1;
padding-right: 5px;">@item.ProductName</span>
                            </a>
                            <div class="product-price">
                                @String.Format("{0:n0}", item.ProductPrice)đ 
                            </div>
                        </div>
                        <div class="product-description">
                            @item.ProductDescription
                        </div>
                    </div>
                </div>
                }               
               
            </div>
        </div>
    </div>
    <a class="btn-view-all" href="@Url.Action("Index","Product")">
        <button class="View-all" >Xem thêm</button>
    </a>
</div>
<div class="section_hours_book form_contact_footer">
