@model ProductIndexModel
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string url = "https://localhost:7034/user-content/";
}
<div class="section_menu_sp">
    <div class="bread_crumd">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thực đơn</li>
            </ol>
        </nav>
    </div>
    <h2 class="section_menu-header_sp">
        TẤT CẢ SẢN PHẨM
    </h2>
    <div class="product-list">
        @foreach (var item in Model.ListProduct)
        {
            <div class="product-item">
                <img src="@Url.Content(@url+@item.ThumbnailImage[0].ImagePath)" class="product-Img"></img>
                <div class="product-content">
                    <div class="product-name-price">
                        <a href="@Url.Action("Details","Product",new{id = @item.Id})" class="product-name">
                            <span style="background-color: #FFFAFA;
                      width: 100%;
                      z-index: 1;
padding-right: 5px;">@item.ProductName</span>
                        </a>
                        <div class="product-price">
                            @String.Format("{0:n0}", item.ProductPrice)đ
                        </div>
                    </div>
                    <div class="product-description">
                        @item.ProductDescription
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="page_navigation">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @await Component.InvokeAsync("Pager", Model)
            </ul>
        </nav>
    </div>
</div>
